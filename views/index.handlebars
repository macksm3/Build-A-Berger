<div class = 'container'>

  <header class = 'banner'>
    <h1>Build-A-Burger!</h1>
  </header>

  <div class= "burger row">
    <div class = 'col-6'>
      <h2>Burgers built & ready</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class = 'col-6'>
      <h2>Burgers devoured</h2>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>

  <div class = 'banner row'>

    <div class = 'col-4'>
      <h3>Add a Burger</h3>
    </div>
      
    <div class = 'builder col-8'>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Describe your burger:</label>
          <input type="text" id="ca" name="burger_name">
        </div>

        {{!-- <div class="form-group">
          <label for="sleepy">Sleepy?</label><br>
          <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
          <input type="radio" name="sleepy" value="0"> Awake
        </div> --}}

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>

</div>

