<h1>Build-A-Burger!</h1>

<h2>Burgers built but not eaten</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Cats that are sleepy!</h2>

<ul>
  {{#each burgerss}}
    {{#if devoured}}
      {{> burgers devoured=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" burger_name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Sleepy?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div>

  <button type="submit">Add Burger</button>
</form>
